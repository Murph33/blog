

<h1> <%= @post.title %></h1>

<h3> <%= @post.body %></h3>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete,
                    data: { confirm: "Are you sure you want to delete this?" } %>
                    

<hr>
<% @post.comments.each_with_index do |comment,i| %>

  <p>
    Comment <%= i+1 %>: <%= comment.body %>
  </p>
  <hr>

<% end %>
